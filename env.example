# AI Lawyer - Конфигурация переменных окружения

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Порт для backend сервера
PORT=3007

# Среда выполнения (development/production)
NODE_ENV=development

# ============================================
# WINDEXAI API CONFIGURATION
# ============================================

# Ваш WindexAI API ключ (получите на https://windexai.com/api-keys)
WINDEXAI_API_KEY=your_windexai_api_key_here

# Модель WindexAI для чата (рекомендуется gpt-4o-mini для баланса цена/качество)
WINDEXAI_MODEL=gpt-4o-mini

# Модель для TTS (Text-to-Speech)
WINDEXAI_TTS_MODEL=tts-1

# Модель для транскрибации речи
WINDEXAI_WHISPER_MODEL=whisper-1

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# URL backend API для frontend приложения
REACT_APP_API_URL=http://localhost:3007

# Версия приложения (для отображения)
REACT_APP_VERSION=0.1.0

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT секретный ключ (генерируйте случайную строку)
JWT_SECRET=your_jwt_secret_key_here

# Количество раундов bcrypt для хэширования паролей
BCRYPT_ROUNDS=12

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

# Максимальный размер файла (в байтах) - 25MB
MAX_FILE_SIZE=26214400

# Разрешенные типы файлов
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,docx,txt,mp3,wav

# ============================================
# CORS CONFIGURATION
# ============================================

# Разрешенные origins для CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3008

# ============================================
# ADMIN CONFIGURATION
# ============================================

# Email администратора по умолчанию
ADMIN_EMAIL=admin@mail.ru

# Пароль администратора по умолчанию (измените!)
ADMIN_PASSWORD=admin123
