# AI Lawyer - Конфигурация переменных окружения

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Порт для backend сервера
# В разработке: 3007
# В продакшене: используйте один из открытых портов 1101-1109
PORT=3007

# Среда выполнения (development/production)
NODE_ENV=development

# ============================================
# WINDEXAI API CONFIGURATION
# ============================================

# Ваш WindexAI API ключ (получите на https://windexai.com/api-keys)
WINDEXAI_API_KEY=your_windexai_api_key_here

# Модель WindexAI для чата (рекомендуется gpt-4o-mini для баланса цена/качество)
WINDEXAI_MODEL=gpt-4o-mini

# Модель для TTS (Text-to-Speech)
WINDEXAI_TTS_MODEL=tts-1

# Модель для транскрибации речи
WINDEXAI_WHISPER_MODEL=whisper-1

# ============================================
# OPENAI API CONFIGURATION
# ============================================

# Ваш OpenAI API ключ (получите на https://platform.openai.com/api-keys)
# Требуется для OpenAI Vision OCR (распознавание документов) и TTS
OPENAI_API_KEY=your_openai_api_key_here

# Модель OpenAI для обработки текста
OPENAI_MODEL=gpt-4o

# Модель OpenAI Vision для распознавания документов
OPENAI_VISION_MODEL=gpt-4o

# Модель OpenAI для TTS (Text-to-Speech)
OPENAI_TTS_MODEL=tts-1

# Голос для TTS (alloy, echo, fable, onyx, nova, shimmer)
OPENAI_TTS_VOICE=alloy

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# URL backend API для frontend приложения
# В продакшене: НЕ УКАЗЫВАЙТЕ (будет использоваться window.location.origin/api автоматически)
# В разработке: http://localhost:3007/api
# REACT_APP_API_URL=http://localhost:3007/api

# URL для WebSocket соединения
# В продакшене: НЕ УКАЗЫВАЙТЕ или укажите относительный путь через прокси
# В разработке: ws://localhost:3007
# REACT_APP_WS_URL=ws://localhost:3007

# Версия приложения (для отображения)
REACT_APP_VERSION=0.1.0

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT секретный ключ (генерируйте случайную строку)
JWT_SECRET=your_jwt_secret_key_here

# Количество раундов bcrypt для хэширования паролей
BCRYPT_ROUNDS=12

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

# Максимальный размер файла (в байтах) - 25MB
MAX_FILE_SIZE=26214400

# Разрешенные типы файлов
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,docx,txt,mp3,wav

# ============================================
# CORS CONFIGURATION
# ============================================

# Разрешенные origins для CORS
# Включите все домены, с которых будут запросы к API
CORS_ORIGIN=http://localhost:3000,http://localhost:3008,http://localhost:80,http://w-lawyer.ru,http://www.w-lawyer.ru

# ============================================
# ADMIN CONFIGURATION
# ============================================

# Email администратора по умолчанию
ADMIN_EMAIL=admin@mail.ru

# Пароль администратора по умолчанию (измените!)
ADMIN_PASSWORD=admin123
